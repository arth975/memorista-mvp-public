<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="selectedDate"
            type="java.time.LocalDate" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_main">

        <!--Start: Calendar-->
        <ImageButton
            android:id="@+id/btn_calendar"
            style="@style/ImageButton"
            android:layout_width="@dimen/image_button_width"
            android:layout_height="@dimen/image_button_height"
            android:layout_marginStart="@dimen/shadow_elevation_card"
            android:layout_marginTop="@dimen/shadow_elevation_card"
            android:contentDescription="@string/content_description"
            android:src="@drawable/ic_calendar_week"
            app:layout_constraintStart_toStartOf="@id/gl_main_start"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_date"
            style="@style/Main.Text.Date"
            dateText="@{selectedDate}"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toBottomOf="@id/btn_calendar"
            app:layout_constraintStart_toEndOf="@id/btn_calendar"
            app:layout_constraintTop_toTopOf="@id/btn_calendar" />
        <!--End: Calendar-->

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tl_task_status"
            style="@style/Main.TabLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="@id/gl_main_end"
            app:layout_constraintStart_toStartOf="@id/gl_main_start"
            app:layout_constraintTop_toBottomOf="@id/btn_calendar" />

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_tasks"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_main_end"
            app:layout_constraintStart_toStartOf="@id/gl_main_start"
            app:layout_constraintTop_toBottomOf="@id/tl_task_status" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fab_add_new_task"
            style="@style/Main.Fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/fab_add_new_task_margin_bottom"
            android:contentDescription="@string/content_description"
            app:fabCustomSize="@dimen/fab_add_new_task_margin_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@id/gl_main_end" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_main_start"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/guide_main_start" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/gl_main_end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="@dimen/guide_main_end" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>