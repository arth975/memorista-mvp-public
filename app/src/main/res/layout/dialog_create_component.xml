<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Shadow"
    android:layout_width="@dimen/create_component_dialog_width"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/background_card_item"
    android:orientation="vertical"
    android:paddingHorizontal="10dp"
    android:paddingVertical="15dp">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_create_task"
        style="@style/NewComponentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="@string/button_new_task"
        app:icon="@drawable/ic_task_icon" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.6dp"
        android:layout_marginVertical="15dp"
        android:background="@color/secondary" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_create_list"
        style="@style/NewComponentButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:text="@string/button_new_list"
        app:icon="@drawable/ic_list_icon" />

</LinearLayout>