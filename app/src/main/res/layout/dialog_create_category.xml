<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginHorizontal="@dimen/create_category_dialog_margin_horizontal"
    android:background="@drawable/background_create_category_dialog"
    android:elevation="@dimen/shadow_elevation_card"
    android:orientation="vertical"
    android:padding="@dimen/create_category_dialog_padding">

    <TextView
        android:id="@+id/text_note"
        style="@style/Text.Title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/create_category_title" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/CreateCategory.NameTextInputLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_category_dialog_margin_name_edit_text_top"
        app:boxBackgroundColor="@color/primary_background">

        <EditText
            android:id="@+id/et_category_name"
            style="@style/CreateCategory.NameEditText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_create_category"
        style="@style/ButtonCommon"
        android:layout_width="match_parent"
        android:layout_height="@dimen/create_category_dialog_height_button_create"
        android:layout_marginTop="@dimen/create_category_dialog_margin_button_create_top"
        android:text="@string/button_create" />
</LinearLayout>