<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_main">

    <!--Start: New Task-->
    <TextView
        android:id="@+id/tv_new_task_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_top"
        android:labelFor="@id/et_task_title"
        android:text="@string/new_task_title"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toTopOf="parent" />

    <com.app.toalarm.ui.custom.LinedEditText
        android:id="@+id/et_task_title"
        style="@style/NewTask.EditText.Title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_bottom"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="@id/gl_main_end"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/tv_new_task_title" />
    <!--End: New Task-->

    <!--Start: New Task-->
    <TextView
        android:id="@+id/tv_notes_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_Top"
        android:labelFor="@id/et_task_notes"
        android:text="@string/new_task_title_notes"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/et_task_title" />

    <com.app.toalarm.ui.custom.LinedEditText
        android:id="@+id/et_task_notes"
        style="@style/NewTask.EditText.Notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_bottom"
        android:importantForAutofill="no"
        app:layout_constraintEnd_toEndOf="@id/gl_main_end"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/tv_notes_title" />
    <!--End: New Task-->

    <!--Start: Date-->
    <TextView
        android:id="@+id/tv_date_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_Top"
        android:text="@string/new_task_title_date"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/et_task_notes" />

    <TextView
        android:id="@+id/tv_task_date"
        style="@style/NewTask.Text.Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/create_task_margin_selected_date_start"
        android:text="@string/new_task_no_selected_date"
        app:layout_constraintBottom_toBottomOf="@id/btn_show_calendar_picker_dialog"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toTopOf="@id/btn_show_calendar_picker_dialog" />

    <ImageButton
        android:id="@+id/btn_show_calendar_picker_dialog"
        style="@style/ImageButton"
        android:layout_width="@dimen/image_button_width"
        android:layout_height="@dimen/image_button_height"
        android:layout_marginTop="@dimen/create_task_margin_title_bottom"
        android:layout_marginEnd="@dimen/shadow_elevation_card"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_calendar_week"
        app:layout_constraintEnd_toEndOf="@id/gl_main_end"
        app:layout_constraintTop_toBottomOf="@id/tv_date_title" />

    <View
        android:id="@+id/selected_date_underline"
        android:layout_width="0dp"
        android:layout_height="@dimen/create_task_underline_height"
        android:layout_marginTop="@dimen/create_task_underline_margin_top"
        android:layout_marginEnd="@dimen/create_task_margin_selected_date_underline_end"
        android:background="@color/underline"
        app:layout_constraintEnd_toStartOf="@id/btn_show_calendar_picker_dialog"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/tv_task_date" />
    <!--End: Date-->

    <!--Start: Time-->
    <TextView
        android:id="@+id/tv_alarm_time_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_Top"
        android:text="@string/new_task_title_time"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/selected_date_underline" />

    <TextView
        android:id="@+id/tv_task_alarm_time"
        style="@style/NewTask.Text.Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/create_task_margin_selected_date_start"
        android:text="@string/new_task_no_selected_date"
        app:layout_constraintBottom_toBottomOf="@id/btn_show_time_picker_dialog"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toTopOf="@id/btn_show_time_picker_dialog" />

    <ImageButton
        android:id="@+id/btn_show_time_picker_dialog"
        style="@style/ImageButton"
        android:layout_width="@dimen/image_button_width"
        android:layout_height="@dimen/image_button_height"
        android:layout_marginTop="@dimen/create_task_margin_title_bottom"
        android:layout_marginEnd="@dimen/shadow_elevation_card"
        android:contentDescription="@string/content_description"
        android:src="@drawable/ic_calendar_week"
        app:layout_constraintEnd_toEndOf="@id/gl_main_end"
        app:layout_constraintTop_toBottomOf="@id/tv_alarm_time_title" />

    <View
        android:id="@+id/selected_time_underline"
        android:layout_width="0dp"
        android:layout_height="@dimen/create_task_underline_height"
        android:layout_marginTop="@dimen/create_task_underline_margin_top"
        android:layout_marginEnd="@dimen/create_task_margin_selected_date_underline_end"
        android:background="@color/underline"
        app:layout_constraintEnd_toStartOf="@id/btn_show_time_picker_dialog"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/tv_task_alarm_time" />
    <!--End: Date-->

    <!--Start: Category-->
    <TextView
        android:id="@+id/tv_category_title"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_Top"
        android:text="@string/new_task_title_category"
        app:layout_constraintStart_toStartOf="@id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/selected_time_underline" />

    <Spinner
        android:id="@+id/spinner_categories"
        style="@style/Spinner.Category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/create_task_margin_title_bottom"
        app:layout_constraintEnd_toEndOf="@id/gl_main_end"
        app:layout_constraintStart_toStartOf="@+id/gl_main_start"
        app:layout_constraintTop_toBottomOf="@id/tv_category_title" />
    <!--End: Category-->

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_create_task"
        style="@style/FabCommon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/fab_margin_bottom"
        android:contentDescription="@string/content_description"
        app:fabCustomSize="@dimen/fab_custom_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/gl_main_end"
        app:srcCompat="@drawable/ic_check" />

    <!--Start: Alarm-->
    <!--End: Alarm-->

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guide_main_start" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gl_main_end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="@dimen/guide_main_end" />

</androidx.constraintlayout.widget.ConstraintLayout>