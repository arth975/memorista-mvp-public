<resources>
    <!-- Base application theme. -->
    <style name="MemoristaTheme" parent="Theme.MaterialComponents.Light.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primaryVariant</item>
        <item name="colorOnPrimary">@color/onPrimary</item>
        <item name="colorAccent">@color/accent</item>
        <item name="colorControlActivated">@color/accent</item>
        <item name="colorOnSurface">@color/font_primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:colorBackground">@color/primary_background</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimary</item>
        <item name="android:navigationBarColor">@color/primary_background</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/GeneralTextView</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>

        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

        <!--Shadow-->
        <item name="android:ambientShadowAlpha">1</item>
        <item name="android:outlineAmbientShadowColor">@color/shadow_ambient</item>
        <item name="android:spotShadowAlpha">1</item>
        <item name="android:outlineSpotShadowColor">@color/shadow_ambient</item>

        <!--Popup menu customization-->
        <item name="listPreferredItemHeightSmall">24dp</item>
        <item name="android:listPreferredItemHeightSmall">24dp</item>
        <item name="android:popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="popupMenuStyle">@style/CustomPopupMenu</item>
        <item name="android:itemTextAppearance">@style/CustomPopupMenuTextAppearance</item>
    </style>

    <style name="GeneralTextView" parent="android:Widget.TextView">
        <item name="android:textColor">@color/font_primary</item>
        <item name="android:textSize">@dimen/font_header</item>
        <item name="android:fontFamily">@font/open_sans_regular</item>
        <item name="fontFamily">@font/open_sans_regular</item>
    </style>

    <!--BottomSheetDialog Customization-->
    <style name="BottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogWrapper</item>
    </style>

    <style name="BottomSheetDialogWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="background">@android:color/transparent</item>
    </style>

    <style name="ThemeOverlay.Toalarm.FullscreenContainer" parent="">
        <item name="fullscreenBackgroundColor">@color/light_blue_600</item>
        <item name="fullscreenTextColor">@color/light_blue_A200</item>
    </style>

    <!--Popup menu Customization-->
    <style name="CustomPopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/font_secondary_1</item>
        <item name="android:popupBackground">@android:color/white</item>
    </style>

    <style name="CustomPopupMenuTextAppearance" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">#545656</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>